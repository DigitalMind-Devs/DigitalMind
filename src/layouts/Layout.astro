---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title = "DigitalMind - Conectamos tu mente al futuro digital" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="m-0 bg-[#0e0e1a] text-white font-[Poppins,sans-serif]">
        <slot />
    </body>
</html>

<style is:global>
  .translate-y-5 {
    transform: translateY(20px);
  }
  
  .translate-y-0 {
    transform: translateY(0);
  }
  
  .duration-600 {
    transition-duration: 600ms;
  }
</style>