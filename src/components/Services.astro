---
import DigitalParticles from './DigitalParticles.astro';

const services = [
  "Reparación y mantenimiento de computadoras",
  "Instalación de software y sistemas",
  "Cursos de Ciberseguridad y Ethical Hacking",
  "Creación de páginas web y sistemas de facturación",
  "Bases de datos: análisis, diseño y optimización",
  "Instalación de redes y soporte técnico"
];
---

<section id="servicios" class="py-16 text-center animate-on-scroll opacity-0 translate-y-5 transition-all duration-600 relative">
  <div class="w-[90%] max-w-[1200px] mx-auto relative">
    <h2 class="text-[2rem] mb-10 font-bold text-[#00ff99]">Servicios</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
      {services.map((service, index) => (
        <div class="service-card bg-[#1a1a2e] p-7 rounded-[10px] shadow-lg backdrop-blur-sm bg-opacity-80 opacity-0 translate-y-5 transition-all duration-600 hover:bg-[#162447] relative z-10 overflow-hidden">
          <div class="card-content relative z-10">
            {service}
          </div>
          
          <!-- Card glow effect -->
          <div class="absolute -bottom-10 -right-10 w-20 h-20 bg-[#00ff99] rounded-full filter blur-xl opacity-20"></div>
        </div>
      ))}
    </div>
  </div>
  
  <!-- Digital particles background -->
  <div class="absolute top-0 left-0 w-full h-full pointer-events-none -z-10">
    <DigitalParticles containerId="services-particles" height="100%" />
  </div>
</section>