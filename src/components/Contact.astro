<section id="contacto" class="py-16 text-center animate-on-scroll opacity-0 translate-y-5 transition-all duration-600">
  <div class="w-[90%] max-w-[1200px] mx-auto">
    <h2 class="text-[2rem] mb-10 font-bold text-[#00ff99]">Contacto</h2>
    
    <form class="flex flex-col gap-4 mt-5 max-w-lg mx-auto">
      <input 
        type="text" 
        placeholder="Nombre" 
        required
        class="py-4 px-4 rounded-lg bg-white border-0 text-base"
      />
      <input 
        type="email" 
        placeholder="Correo" 
        required
        class="py-4 px-4 rounded-lg bg-white border-0 text-base"
      />
      <input 
        type="tel" 
        placeholder="TelÃ©fono"
        class="py-4 px-4 rounded-lg bg-white border-0 text-base"
      />
      <textarea 
        placeholder="Mensaje" 
        rows="5" 
        required
        class="py-4 px-4 rounded-lg bg-white border-0 text-base"
      ></textarea>
      <button 
        type="submit"
        class="py-4 bg-[#00ff99] hover:bg-[#00cc7a] text-black font-bold rounded-lg cursor-pointer transition-colors"
      >
        Enviar Mensaje
      </button>
    </form>
  </div>
</section>