---
// No props needed for this component
---

<section id="contacto" class="py-16 text-center animate-on-scroll opacity-0 translate-y-5 transition-all duration-600">
  <div class="w-[90%] max-w-[1200px] mx-auto">
    <h2 class="text-[2rem] mb-10 font-bold text-[#00ff99] relative inline-block">
      <span>Contacto</span>
      <!-- Decorative element -->
      <div class="absolute -top-2 -right-6 w-5 h-5">
        <svg viewBox="0 0 24 24" fill="none" stroke="#00ff99" stroke-width="2">
          <path d="M12 2L12 22M2 12L22 12" stroke-linecap="round"></path>
        </svg>
      </div>
    </h2>
    
    <form class="flex flex-col gap-4 mt-5 max-w-lg mx-auto relative">
      <!-- 3D layer effect for form -->
      <div class="absolute -inset-3 bg-gradient-to-r from-[#0d0d3f] to-[#00ff99] opacity-30 blur-lg rounded-lg -z-10"></div>
      <div class="absolute -inset-1 bg-[#1a1a2e] rounded-lg -z-5"></div>
      
      <div class="form-field-wrapper relative">
        <input 
          type="text" 
          placeholder="Nombre" 
          required
          class="py-4 px-4 rounded-lg bg-white border-0 text-base w-full form-field"
        />
        <div class="field-glow"></div>
      </div>
      
      <div class="form-field-wrapper relative">
        <input 
          type="email" 
          placeholder="Correo" 
          required
          class="py-4 px-4 rounded-lg bg-white border-0 text-base w-full form-field"
        />
        <div class="field-glow"></div>
      </div>
      
      <div class="form-field-wrapper relative">
        <input 
          type="tel" 
          placeholder="TelÃ©fono"
          class="py-4 px-4 rounded-lg bg-white border-0 text-base w-full form-field"
        />
        <div class="field-glow"></div>
      </div>
      
      <div class="form-field-wrapper relative">
        <textarea 
          placeholder="Mensaje" 
          rows="5" 
          required
          class="py-4 px-4 rounded-lg bg-white border-0 text-base w-full form-field"
        ></textarea>
        <div class="field-glow"></div>
      </div>
      
      <button 
        type="submit"
        class="relative py-4 bg-[#00ff99] hover:bg-[#00cc7a] text-black font-bold rounded-lg cursor-pointer transition-colors group overflow-hidden"
      >
        <span class="relative z-10">Enviar Mensaje</span>
        <!-- Button animation effect -->
        <div class="absolute inset-0 h-full w-full bg-gradient-to-r from-[#00ff99] to-[#7fffd4] -z-[1] group-hover:scale-[1.05] transition-transform duration-300"></div>
        <div class="absolute -inset-1 rounded-lg blur-sm bg-gradient-to-r from-[#00ff99] to-[#7fffd4] opacity-0 group-hover:opacity-70 -z-[2] transition-opacity duration-300"></div>
      </button>
    </form>
  </div>
</section>

<style>
  .form-field-wrapper {
    position: relative;
  }
  
  .field-glow {
    position: absolute;
    inset: 0;
    border-radius: 8px;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .form-field:focus + .field-glow {
    opacity: 1;
    box-shadow: 0 0 10px 2px rgba(0, 255, 153, 0.5);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Add interactive 3D tilt effect to form fields
    const formFields = document.querySelectorAll('.form-field');
    
    formFields.forEach(field => {
      field.addEventListener('mousemove', (e: MouseEvent) => {
        const rect = field.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        
        const rotateX = (y - centerY) / 20;
        const rotateY = -(x - centerX) / 40;
        
        (field as HTMLElement).style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
      });
      
      field.addEventListener('mouseleave', () => {
        (field as HTMLElement).style.transform = `perspective(1000px) rotateX(0deg) rotateY(0deg)`;
      });
    });
  });
</script>