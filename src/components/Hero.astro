---
import BrainModel from "./BrainModel.astro";
// No props needed for this component
---

<section
  class="hero-section bg-gradient-to-r from-[#0d0d3f] to-[#00ff99] py-20 text-center opacity-0 translate-y-5 transition-all duration-600 relative overflow-hidden"
>
  <div
    class="w-[90%] max-w-[1200px] mx-auto flex flex-col md:flex-row items-center"
  >
    <div class="md:w-1/2 z-10">
      <h2 class="text-[2.5rem] mb-5 text-white font-bold">
        Conectamos tu mente al futuro digital.
      </h2>
      <a
        href="#contacto"
        class="inline-block bg-[#ff5722] hover:bg-[#e64a19] text-white py-3 px-8 rounded-[30px] font-bold transition-colors"
      >
        Solicitar Servicio
      </a>
    </div>

    <div class="md:w-1/2 flex justify-center mt-8 md:mt-0">
      <BrainModel containerId="brain-model" height="350px" width="350px" />
    </div>
  </div>

  <!-- Digital circuit lines background effect -->
  <div
    class="absolute top-0 left-0 w-full h-full pointer-events-none opacity-10"
  >
    <svg class="w-full h-full" preserveAspectRatio="none">
      <g stroke="#ffffff" stroke-width="0.5">
        <line x1="0%" y1="20%" x2="100%" y2="30%"></line>
        <line x1="0%" y1="50%" x2="100%" y2="60%"></line>
        <line x1="10%" y1="10%" x2="50%" y2="90%"></line>
        <line x1="70%" y1="0%" x2="30%" y2="100%"></line>
        <line x1="80%" y1="10%" x2="90%" y2="90%"></line>
      </g>
    </svg>
  </div>
</section>

<style>
  .animate-pulse-slow {
    animation: pulse 6s infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 0.1;
    }
    50% {
      opacity: 0.5;
    }
  }
</style>
